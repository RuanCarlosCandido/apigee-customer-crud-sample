<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="Ping">
            <Description/>
            <Request/>
            <Response>
                <Step>
                    <Name>getCustomerMock</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/ping") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="getCustomer">
            <Description/>
            <Request>
                <Step>
                    <Name>Extract-Path-Parameters</Name>
                </Step>
                <Step>
                    <Name>userContext_js</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>getCustomerMock</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/getCustomer/*") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/customers</BasePath>
        <Properties/>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>